<%= form_for [@story, @sentence] do |f| %>
  <%= f.label :text %>
  <%= f.text_area :text, class: "materialize-textarea" %>
  <%= f.text_field :image, type: "hidden", value: @image %>
  <%= f.text_field :user_id, type: "hidden", value: @user.id %>
  <%= f.text_field :story_id, type: "hidden", value: @story.id %>


  <%= f.submit "Add Contribution", class: "btn" %>
<% end %>
